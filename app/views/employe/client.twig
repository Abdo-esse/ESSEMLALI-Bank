{% extends "components/base.twig" %}

{% block title %}Page d'accueil{% endblock %}
{% block header %}
<header class="bg-gray-800 text-white py-6">
        <div class="container mx-auto px-4 relative">
            <button id="back-button" class="absolute left-4 top-1/2 transform -translate-y-1/2 text-2xl font-bold hover:text-gray-300">
                &larr;
            </button>
            <h1 class="text-2xl font-bold text-center">Gestion des Utilisateurs</h1>
        </div>
    </header>
{% endblock %}


{% block content %}
  
    
    <div class="container mx-auto px-4 py-8">
        <div class="bg-white rounded-lg shadow-md p-6 mb-6">
            <div class="flex justify-between items-center border-b border-gray-200 pb-4 mb-6">
                <h2 class="text-xl font-semibold">Informations Personnelles</h2>
                <span id="status-badge" class="px-3 py-1 rounded-full text-sm font-medium bg-green-500 text-white">Actif</span>
            </div>
            
            <div class="grid md:grid-cols-2 gap-6">
                <div>
                    <div class="mb-4">
                        <p class="text-sm text-gray-500 mb-1">Nom</p>
                        <p class="text-base font-medium">{{ client.client.nom }}</p>
                    </div>
                    
                    <div class="mb-4">
                        <p class="text-sm text-gray-500 mb-1">Prénom</p>
                        <p class="text-base font-medium">{{ client.client.prenom }}</p>
                    </div>
                    
                    <div class="mb-4">
                        <p class="text-sm text-gray-500 mb-1">Email</p>
                        <p class="text-base font-medium">{{ client.client.email }}</p>
                    </div>
                    
                    <div class="mb-4">
                        <p class="text-sm text-gray-500 mb-1">Date de création</p>
                        <p class="text-base font-medium">{{ client.compte.dateCreation }}</p>
                    </div>
                    
                    <div class="mb-4">
                        <p class="text-sm text-gray-500 mb-1">Sexe</p>
                        <p class="text-base font-medium">{{ client.client.sexe }}</p>
                    </div>
                </div>
                
                <div>
                    <div class="mb-4">
                        <p class="text-sm text-gray-500 mb-1">Téléphone</p>
                        <p class="text-base font-medium">{{ client.client.telephone }}</p>
                    </div>
                    
                    <div class="mb-4">
                        <p class="text-sm text-gray-500 mb-1">Adresse</p>
                        <p class="text-base font-medium">{{ client.client.adresse }}</p>
                    </div>
                    
                    <div class="mb-4">
                        <p class="text-sm text-gray-500 mb-1">Carte Nationale d'Identité</p>
                        <img src="http://localhost/ESSEMLALI-Bank/uploads/{{ client.client.carteIdentite }}" alt="Carte Nationale d'Identité" class="w-full max-w-md border border-gray-200 rounded-md">
                    </div>
                </div>
            </div>
            
            <div class="bg-gray-50 border-l-4 border-blue-500 p-4 mt-6">
                <h3 class="font-medium mb-2">Informations Financières</h3>
                <div class="mb-2">
                    <p class="text-sm text-gray-500 mb-1">Numéro de Compte</p>
                    <p class="text-base font-medium">{{ client.compte.numeroCompte }}</p>
                </div>
                <div>
                    <div class="flex items-center gap-2">
                        <p class="text-sm text-gray-500 mb-1">Solde</p>
                        <button id="toggle-balance" class="text-gray-500 hover:text-gray-700">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                                <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                            </svg>
                        </button>
                    </div>
                    <p id="balance-value" class="text-2xl font-bold text-blue-600 hidden">{{ client.compte.solde }}</p>
                    <p id="balance-hidden" class="text-2xl font-bold text-blue-600">••••,••</p>
                </div>
            </div>
            
            <div class="flex justify-end gap-4 mt-6">
                <button id="delete-btn" class="px-4 py-2 bg-red-600 text-white font-medium rounded hover:bg-red-700 transition-colors">Supprimer</button>
                <button id="toggle-status-btn" class="px-4 py-2 bg-yellow-500 text-white font-medium rounded hover:bg-yellow-600 transition-colors">Désactiver</button>
            </div>
        </div>
    </div>
    
    <script>
        // Fonctionnalité pour retourner à la page précédente
        const backButton = document.getElementById('back-button');
        backButton.addEventListener('click', function() {
            window.history.back();
        });

        // Fonctionnalité pour afficher/masquer le solde
        const toggleBalance = document.getElementById('toggle-balance');
        const balanceValue = document.getElementById('balance-value');
        const balanceHidden = document.getElementById('balance-hidden');
        let isBalanceVisible = false;

        toggleBalance.addEventListener('click', function() {
            isBalanceVisible = !isBalanceVisible;
            
            if (isBalanceVisible) {
                balanceValue.classList.remove('hidden');
                balanceHidden.classList.add('hidden');
                toggleBalance.innerHTML = `
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M3.707 2.293a1 1 0 00-1.414 1.414l14 14a1 1 0 001.414-1.414l-1.473-1.473A10.014 10.014 0 0019.542 10C18.268 5.943 14.478 3 10 3a9.958 9.958 0 00-4.512 1.074l-1.78-1.781zm4.261 4.26l1.514 1.515a2.003 2.003 0 012.45 2.45l1.514 1.514a4 4 0 00-5.478-5.478z" clip-rule="evenodd" />
                        <path d="M12.454 16.697L9.75 13.992a4 4 0 01-3.742-3.741L2.335 6.578A9.98 9.98 0 00.458 10c1.274 4.057 5.065 7 9.542 7 .847 0 1.669-.105 2.454-.303z" />
                    </svg>
                `;
            } else {
                balanceValue.classList.add('hidden');
                balanceHidden.classList.remove('hidden');
                toggleBalance.innerHTML = `
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                        <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                    </svg>
                `;
            }
        });

        // Fonctionnalité pour changer le statut (activer/désactiver)
        const statusBadge = document.getElementById('status-badge');
        const toggleStatusBtn = document.getElementById('toggle-status-btn');
        let isActive = true;
        
        toggleStatusBtn.addEventListener('click', function() {
            isActive = !isActive;
            
            if (isActive) {
                statusBadge.textContent = 'Actif';
                statusBadge.className = 'px-3 py-1 rounded-full text-sm font-medium bg-green-500 text-white';
                toggleStatusBtn.textContent = 'Désactiver';
                toggleStatusBtn.className = 'px-4 py-2 bg-yellow-500 text-white font-medium rounded hover:bg-yellow-600 transition-colors';
            } else {
                statusBadge.textContent = 'Inactif';
                statusBadge.className = 'px-3 py-1 rounded-full text-sm font-medium bg-red-500 text-white';
                toggleStatusBtn.textContent = 'Activer';
                toggleStatusBtn.className = 'px-4 py-2 bg-green-500 text-white font-medium rounded hover:bg-green-600 transition-colors';
            }
        });
        
        // Fonctionnalité pour supprimer
        const deleteBtn = document.getElementById('delete-btn');
        
        deleteBtn.addEventListener('click', function() {
            if (confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?')) {
                alert('Utilisateur supprimé avec succès !');
                // Ici, dans une application réelle, on redirigerait vers une autre page
                // ou on supprimerait l'élément du DOM
            }
        });
    </script>
{% endblock %}