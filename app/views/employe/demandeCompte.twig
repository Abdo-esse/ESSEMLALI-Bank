<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ESSEMLALI Bank - Détails de la demande</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">
<div class="max-w-4xl mx-auto p-4">
    <!-- En-tête -->
    <div class="flex justify-between items-center bg-blue-700 text-white p-4 rounded-t-lg">
        <div class="text-2xl font-bold">ESSEMLALI Bank</div>
        <div>Demande #<span id="requestId">{{ client.id }}</span></div>
    </div>

    <!-- Détails de la demande -->
    <div class="bg-white rounded-b-lg shadow-md p-6 mb-6">
        <h1 class="text-xl font-bold text-blue-700 mb-6 pb-3 border-b border-gray-200">
            Demande d'ouverture de compte bancaire
        </h1>

        <!-- Informations client en grille -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">Date de demande </label>
                <div id="creationDate" class="text-gray-800">{{ client.dateCreation|date('Y-m-d') }}</div>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">Nom</label>
                <div id="lastName" class="text-gray-800">{{ client.nom }}</div>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">Prénom</label>
                <div id="firstName" class="text-gray-800">{{ client.prenom }}</div>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">Email</label>
                <div id="email" class="text-gray-800">{{ client.email }}</div>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">Téléphone</label>
                <div id="phone" class="text-gray-800">{{ client.telephone }}</div>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">Sexe</label>
                <div id="gender" class="text-gray-800">{{ client.sexe }}</div>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">Statut</label>
                <div id="status" class="text-gray-800">
                        <span id="statusBadge"
                              class="px-2 py-1 rounded-full text-xs font-semibold {{ client.isActive ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' }}">
                             En attente
                        </span>
                </div>
            </div>
        </div>

        <!-- Informations sur toute la largeur -->
        <div class="mt-6">
            <label class="block text-sm font-medium text-gray-500 mb-1">Adresse</label>
            <div id="address" class="text-gray-800">{{ client.adresse }}</div>
        </div>

        <div class="mt-4">
            <label class="block text-sm font-medium text-gray-500 mb-1">Carte d'identité nationale</label>
            <div class="mt-2">
                <img
                        src="{{ asset('uploads/' ~ client.getCarteIdentite()) }}"
                        alt="Carte d'identité nationale{{ client.getCarteIdentite() }}"
                        class="max-w-md border border-gray-300 rounded-md shadow-sm"
                />
            </div>
        </div>

        <!-- Boutons d'action -->
        <div class="flex justify-end gap-4 mt-8">
            <form method="post" action="/ESSEMLALI-Bank/refuser/{{ client.id }}"
                  onsubmit="return confirm('Voulez-vous vraiment Refuser la demande ?');">
                <button type="submit"
                        class="px-4 py-2 bg-red-500 text-white font-medium rounded-md hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50 transition-colors">
                    Refuser la demande
                </button>
            </form>
            <form method="post" action="/ESSEMLALI-Bank/approuver/{{ client.id }}"
                  onsubmit="return confirm('Voulez-vous vraiment Approuver la demande?');">
                <button type="submit"
                        class="px-4 py-2 bg-green-500 text-white font-medium rounded-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-opacity-50 transition-colors">
                    Approuver la demande
                </button>
            </form>
        </div>
    </div>
</div>
</body>
</html>