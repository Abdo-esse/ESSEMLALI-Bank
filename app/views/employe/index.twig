{% extends "components/baseDashbord.twig" %}

{% block title %}Page d'accueil{% endblock %}
{% block sidebar %}
    {% include "layout/sidebarEmploye.twig" %}
{% endblock %}


{% block content %}
    <div class="bg-gray-100 font-sans">
        <div class="container mx-auto px-4 py-8">
            <div class="bg-white rounded-lg shadow-md p-6 mb-6">
                <div class="flex justify-between items-center mb-6">
                    <div>
                        <h1 class="text-2xl font-bold text-indigo-800">Bonjour, {{ name }} {{ prenom }}</h1>
                        <p class="text-gray-600"> Bienvenue dans votre espace employé </p>
                    </div>
                    <div class="text-right">
                        <p class="text-sm text-gray-500">Date: {{ "now"|date("d M Y - H:i") }}</p>
                    </div>
                </div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
                <div class="bg-white rounded-lg shadow-md p-4">
                    <div class="flex items-center">
                        <div class="p-3 rounded-full bg-green-100 text-green-600">
                            <i class="fas fa-money-check-alt text-xl"></i>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm text-gray-500">Comptes actifs</p>
                            <p class="text-lg font-semibold">{{ data.nbrCompte }}</p>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="flex items-center">
                            <span class="text-sm text-green-600"><i
                                        class="fas fa-arrow-up"></i> +{{ data.nbrCompteParMois }}</span>
                            <span class="text-xs text-gray-500 ml-2">ce mois</span>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-lg shadow-md p-4">
                    <div class="flex items-center">
                        <div class="p-3 rounded-full bg-green-100 text-green-600">
                            <i class="fas fa-money-check-alt text-xl"></i>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm text-gray-500">Demandes en attente</p>
                            <p class="text-lg font-semibold">{{ data.nbrDemandes }}</p>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="flex items-center">
                            <span class="text-sm text-green-600"><i
                                        class="fas fa-arrow-up"></i> +{{ data.nbrDemandesParMois }}</span>
                            <span class="text-xs text-gray-500 ml-2">ce mois</span>
                        </div>
                    </div>
                </div>
                <div class="bg-white rounded-lg shadow-md p-4">
                    <div class="flex items-center">
                        <div class="p-3 rounded-full bg-purple-100 text-purple-600">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20"
                                 fill="currentColor">
                                <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z"/>
                                <path fill-rule="evenodd"
                                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z"
                                      clip-rule="evenodd"/>
                            </svg>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm text-gray-500">Solde total</p>
                            <p class="text-lg font-semibold">{{ data.totalSolde }} DH</p>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-lg shadow-md p-4">
                    <div class="flex items-center">
                        <div class="p-3 rounded-full bg-blue-100 text-blue-600">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20"
                                 fill="currentColor">
                                <path d="M8 5a1 1 0 100 2h5.586l-1.293 1.293a1 1 0 001.414 1.414l3-3a1 1 0 000-1.414l-3-3a1 1 0 10-1.414 1.414L13.586 5H8z"/>
                                <path d="M12 15a1 1 0 100-2H6.414l1.293-1.293a1 1 0 10-1.414-1.414l-3 3a1 1 0 000 1.414l3 3a1 1 0 001.414-1.414L6.414 15H12z"/>
                            </svg>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm text-gray-500">Transactions</p>
                            <p class="text-lg font-semibold">{{ data.nbrHistorique }}</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
                <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition duration-300">
                    <div class="flex justify-center items-center w-12 h-12 bg-green-100 rounded-full mb-4">
                        <i class="fas fa-exchange-alt text-green-600 text-xl"></i>
                    </div>
                    <h2 class="text-xl font-semibold text-gray-800 mb-2">Opérations financières</h2>
                    <p class="text-gray-600 mb-4">Effectuez des virements, retraits ou dépôts pour vos clients</p>
                    <div class="grid grid-cols-3 gap-2">
                        <a href="virement" class="bg-green-600 text-white py-2 px-2 rounded-md hover:bg-green-700 transition duration-300 text-sm">
                            Virement
                        </a>
                        <a href="retrait" class="bg-green-600 text-white py-2 px-2 rounded-md hover:bg-green-700 transition duration-300 text-sm">
                            Retrait
                        </a>
                        <a href="versement" class="bg-green-600 text-white py-2 px-2 rounded-md hover:bg-green-700 transition duration-300 text-sm">
                            Versement
                        </a>
                    </div>
                </div>
                <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition duration-300">
                    <div class="flex justify-center items-center w-12 h-12 bg-blue-100 rounded-full mb-4">
                        <i class="fas fa-users text-blue-600 text-xl"></i>
                    </div>
                    <h2 class="text-xl font-semibold text-gray-800 mb-2">Gestion des clients</h2>
                    <p class="text-gray-600 mb-4">Accédez à la liste des clients et gérez leurs informations</p>
                    <a href="clients" class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition duration-300">
                        Voir les clients
                    </a >
                </div>
                <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition duration-300">
                    <div class="flex justify-center items-center w-12 h-12 bg-purple-100 rounded-full mb-4">
                        <i class="fas fa-file-alt text-purple-600 text-xl"></i>
                    </div>
                    <h2 class="text-xl font-semibold text-gray-800 mb-2">Demandes de compte</h2>
                    <p class="text-gray-600 mb-4">Traitez les nouvelles demandes d'ouverture de compte</p>
                    <a href="demande-compte" class="w-full bg-purple-600 text-white py-2 px-4 rounded-md hover:bg-purple-700 transition duration-300">
                        Voir les demandes
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}