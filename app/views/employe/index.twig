{% extends "components/baseDashbord.twig" %}

{% block title %}Page d'accueil{% endblock %}
{% block sidebar %}
{% include "layout/sidebarEmploye.twig" %}
{% endblock %}


{% block content %}
<div class="bg-gray-100 font-sans">
  <div class="container mx-auto px-4 py-8">
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
      <div class="flex justify-between items-center mb-6">
        <div>
          <h1 class="text-2xl font-bold text-indigo-800">Bonjour, Mohammed Alaoui</h1>
          <p class="text-gray-600"> Bienvenue dans votre espace employé </p>
        </div>
        <div class="text-right">
          <p class="text-sm text-gray-500">Date: {{ "now"|date("d M Y - H:i") }}</p>
        </div>
      </div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
    <div class="bg-white rounded-lg shadow-md p-4">
        <div class="flex items-center">
          <div class="p-3 rounded-full bg-green-100 text-green-600">
            <i class="fas fa-money-check-alt text-xl"></i>
          </div>
          <div class="ml-4">
            <p class="text-sm text-gray-500">Comptes actifs</p>
            <p class="text-lg font-semibold">1356</p>
          </div>
        </div>
        <div class="mt-3">
          <div class="flex items-center">
            <span class="text-sm text-green-600"><i class="fas fa-arrow-up"></i> +18</span>
            <span class="text-xs text-gray-500 ml-2">ce mois</span>
          </div>
        </div>
      </div>
      
      <div class="bg-white rounded-lg shadow-md p-4">
        <div class="flex items-center">
          <div class="p-3 rounded-full bg-yellow-100 text-yellow-600">
            <i class="fas fa-tasks text-xl"></i>
          </div>
          <div class="ml-4">
            <p class="text-sm text-gray-500">Demandes en attente</p>
            <p class="text-lg font-semibold">7</p>
          </div>
        </div>
      </div>
      <div class="bg-white rounded-lg shadow-md p-4">
        <div class="flex items-center">
          <div class="p-3 rounded-full bg-blue-100 text-blue-600">
            <i class="fas fa-users text-xl"></i>
          </div>
          <div class="ml-4">
            <p class="text-sm text-gray-500">Clients</p>
            <p class="text-lg font-semibold">1487</p>
          </div>
        </div>
        <div class="mt-3">
          <div class="flex items-center">
            <span class="text-sm text-green-600"><i class="fas fa-arrow-up"></i> +24</span>
            <span class="text-xs text-gray-500 ml-2">ce mois</span>
          </div>
        </div>
      </div>      
      <div class="bg-white rounded-lg shadow-md p-4">
        <div class="flex items-center">
          <div class="p-3 rounded-full bg-purple-100 text-purple-600">
            <i class="fas fa-calendar-check text-xl"></i>
          </div>
          <div class="ml-4">
            <p class="text-sm text-gray-500">Rendez-vous</p>
            <p class="text-lg font-semibold">5</p>
          </div>
        </div>
        <div class="mt-3 text-sm text-purple-600">
          <span>Prochain dans 30 min</span>
        </div>
      </div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
      <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition duration-300">
        <div class="flex justify-center items-center w-12 h-12 bg-green-100 rounded-full mb-4">
          <i class="fas fa-exchange-alt text-green-600 text-xl"></i>
        </div>
        <h2 class="text-xl font-semibold text-gray-800 mb-2">Opérations financières</h2>
        <p class="text-gray-600 mb-4">Effectuez des virements, retraits ou dépôts pour vos clients</p>
        <div class="grid grid-cols-3 gap-2">
          <button class="bg-green-600 text-white py-2 px-2 rounded-md hover:bg-green-700 transition duration-300 text-sm">
            Virement
          </button>
          <button class="bg-green-600 text-white py-2 px-2 rounded-md hover:bg-green-700 transition duration-300 text-sm">
            Retrait
          </button>
          <button class="bg-green-600 text-white py-2 px-2 rounded-md hover:bg-green-700 transition duration-300 text-sm">
            Versement
          </button>
        </div>
      </div>
      <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition duration-300">
        <div class="flex justify-center items-center w-12 h-12 bg-blue-100 rounded-full mb-4">
          <i class="fas fa-users text-blue-600 text-xl"></i>
        </div>
        <h2 class="text-xl font-semibold text-gray-800 mb-2">Gestion des clients</h2>
        <p class="text-gray-600 mb-4">Accédez à la liste des clients et gérez leurs informations</p>
        <button class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition duration-300">
          Voir les clients
        </button>
      </div>
      <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition duration-300">
        <div class="flex justify-center items-center w-12 h-12 bg-purple-100 rounded-full mb-4">
          <i class="fas fa-file-alt text-purple-600 text-xl"></i>
        </div>
        <h2 class="text-xl font-semibold text-gray-800 mb-2">Demandes de compte</h2>
        <p class="text-gray-600 mb-4">Traitez les nouvelles demandes d'ouverture de compte</p>
        <button class="w-full bg-purple-600 text-white py-2 px-4 rounded-md hover:bg-purple-700 transition duration-300">
          Voir les demandes
        </button>
      </div>
    </div>
  </div>
</div>
{% endblock %}