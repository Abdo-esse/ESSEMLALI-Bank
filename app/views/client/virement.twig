{% extends "components/baseDashbord.twig" %}

{% block title %}Page d'accueil{% endblock %}
{% block sidebar %}
    {% include "layout/sidebarClient.twig" %}
{% endblock %}


{% block content %}

    <div class="bg-gray-100 min-h-screen flex items-center justify-center p-4">
        <div class="bg-white rounded-lg shadow-lg p-6 w-full max-w-md">
            <div class="flex items-center justify-center mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-blue-600" fill="none" viewBox="0 0 24 24"
                     stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>
                </svg>
            </div>

            <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">Virement Bancaire</h1>

            <form class="space-y-6" action="/ESSEMLALI-Bank/virement-client" method="POST">
                <div>
                    <label for="recipient-iban" class="block text-sm font-medium text-gray-700 mb-1">IBAN du
                        bénéficiaire</label>
                    <input type="text" id="recipient-iban" name="recipient-iban"
                           class="mt-1 block w-full px-3 py-2 bg-white dark:bg-gray-600 border {% if session.errorVirement.Recipient is defined %}border-red-500 dark:border-red-500{% else %}border-gray-300 dark:border-gray-500{% endif %} rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:text-white"
                           value="{{ session.dataVirement['recipient-iban'] is defined ? session.dataVirement['recipient-iban'] : 'BANK-' }}"
                           placeholder="BANK-XXXXXXXXXXXX" required>
                    {% if session.errorVirement.Recipient is defined %}
                        <p class="mt-1 text-sm text-red-600">
                                    <span class="flex items-center">
                                        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20"
                                             xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd"
                                              d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z"
                                              clip-rule="evenodd"></path>
                                        </svg>
                                        {{ session.errorVirement.Recipient }}
                                    </span>
                        </p>
                    {% endif %}
                </div>

                <div>
                    <label for="amount" class="block text-sm font-medium text-gray-700 mb-1">Montant à
                        transférer</label>
                    <div class="">
                        <input type="number" id="amount" name="amount" min="10" step="1"
                               class="w-full pl-8 pr-4 py-2 border   {% if session.errorVirement.amount is defined %}border-red-500 dark:border-red-500{% else %}border-gray-300 dark:border-gray-500{% endif %}  rounded-md focus:ring-blue-500 focus:border-blue-500"

                               placeholder="0.00"
                               value="{{ session.dataVirement['amount'] is defined ? session.dataVirement['amount'] : 10 }}"
                        >

                        {% if session.errorVirement.amount is defined %}
                            <p class="mt-1 text-sm text-red-600">
                                    <span class="flex items-center">
                                        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20"
                                             xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd"
                                              d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z"
                                              clip-rule="evenodd"></path>
                                        </svg>
                                        {{ session.errorVirement.amount }}
                                    </span>
                            </p>
                        {% endif %}
                    </div>
                </div>

                <div>
                    <label for="description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                    <textarea id="description" name="description" rows="3"
                              class="w-full px-4 py-2 border {% if session.errorVirement.description is defined %}border-red-500 dark:border-red-500{% else %}border-gray-300 dark:border-gray-500{% endif %} rounded-md focus:ring-blue-500 focus:border-blue-500"
                              placeholder="Motif du virement...">{{ session.dataVirement['description'] is defined ? session.dataVirement['description'] : '' }}</textarea>
                    {% if session.errorVirement.description is defined %}
                        <p class="mt-1 text-sm text-red-600">
                                    <span class="flex items-center">
                                        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20"
                                             xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd"
                                              d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z"
                                              clip-rule="evenodd"></path>
                                        </svg>
                                        {{ session.errorVirement.description }}
                                    </span>
                        </p>
                    {% endif %}
                </div>

                <div class="pt-2">
                    <button type="submit"
                            class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded-md transition duration-300 ease-in-out focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                        Effectuer le virement
                    </button>
                </div>
            </form>

            <div class="mt-6 text-center text-xs text-gray-500">
                <p>Sécurisé et confidentiel. Vos données bancaires sont protégées.</p>
            </div>
        </div>
    </div>
{% endblock %}
